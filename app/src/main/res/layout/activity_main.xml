<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.win_7.Application4.MainActivity"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/menuu"
        android:layout_weight="1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:foregroundGravity="center"
        android:layout_marginBottom="5dp"
        android:onClick="fire"
        app:srcCompat="@drawable/menu5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/customborder"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/breakfast"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:onClick="breakfast"
                app:srcCompat="@drawable/breakfast"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/fire"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:onClick="fire"
                app:srcCompat="@drawable/lun" />


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_ambu"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:text="Breakfast"
                android:fontFamily="cursive"
                android:textSize="16sp"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_fire"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:text="Main Plates"
                android:textSize="16sp"
                android:fontFamily="cursive"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/polic"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:onClick="dessert"
                app:srcCompat="@drawable/des"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <ImageView
                android:id="@+id/gas"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:onClick="reset"
                app:srcCompat="@drawable/snaks"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_police"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:text="Desserts"
                android:fontFamily="cursive"
                android:textSize="16sp"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_gas"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:text="Snacks"
                android:textSize="16sp"
                android:fontFamily="cursive"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/acced"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:onClick="reset"
                app:srcCompat="@drawable/coffee"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <ImageView
                android:id="@+id/preg"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:onClick="reset"
                app:srcCompat="@drawable/drinks"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_acced"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:text="Hot Drinks"
                android:fontFamily="cursive"
                android:textSize="16sp"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_preg"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:text="Cold Drinks"
                android:textSize="16sp"
                android:fontFamily="cursive"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center" />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>
